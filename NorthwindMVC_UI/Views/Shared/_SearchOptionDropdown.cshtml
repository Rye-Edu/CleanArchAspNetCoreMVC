@model Northwind_App.ViewModels.ProductVM.ProductViewModel

<select aria-label="filter options" class="form-control-sm pe-lg-1" id="categorized-options" asp-for="ProductFilter.SelectedOption"
        asp-items="@Model.ProductFilter.SearchFilters">
        <option value="" id="default-val">Choose</option>     
    </select>



<select aria-label="selected options" class="form-control-sm selections" id="selected-option" asp-for="ProductFilter.SelectedText" asp-items="@ViewBag.CurrentSelected">
        
    @{
        if (Model.ProductFilter.SelectedText == null || Model.ProductFilter.SelectedText == string.Empty)
        {
        <option value="">Choose</option>
        }
        else
        {
            <option value="@Model.ProductFilter.SelectedText">@Model.ProductFilter.SelectedText</option>
        }
    }            
    </select>
     @*<input type="hidden" id="selected-text" asp-for="ProductFilter.SelectedText"/>*@

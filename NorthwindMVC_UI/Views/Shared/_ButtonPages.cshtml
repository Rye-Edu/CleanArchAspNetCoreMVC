<div>
    <ul class="pagination" id="pagenumber">
        @*<li class="page-item"><a class="btn btn-outline-light btn-sm text-primary">First Page</a></li>*@
        @{
            var buttonPages = int.Parse(ViewData["ButtonPages"]!.ToString()!);

            var currentPage = int.Parse(ViewData["PageNumber"]!.ToString()!);

            if (buttonPages > 0)
            {             
             
                foreach (var pages in Enumerable.Range(1, buttonPages))
                {
               
                    <li class="page-item">
                        <a class="@(pages ==  int.Parse(ViewData["PageNumber"]!.ToString()!) ? "btn btn-secondary btn-sm" : "btn btn-outline-light btn-sm text-primary")" asp-route-itemPage="@pages" asp-route-search="@ViewData["Search"]" asp-route-filter="@ViewData["Filter"]">@pages</a>
                    </li>
                    
                    //<li class="page-item"><a class="page-link" asp-route-page="@item">@item</a></li>
                }

                //<li class="page-item"><a class="page-link" asp-route-page="@x">@x</a></li>
            }
        }

    </ul>
</div>

